import java.util.Scanner;
public class Main
{
  public static void main (String[]args)
  {
    Scanner sc=new Scanner (System.in);
    System.out.print("Enter the number=");
    int n=sc.nextInt ();
    int sum=0;
    for(int i=0;i<=2*n;i++)
    {
        if(i%2==0 && i%3==0)
        {
            sum = sum + i;
        }
    }
    System.out.print("Sum of first n even numbers divisible by 3="+sum);
  }
}
